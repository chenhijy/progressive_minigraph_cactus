{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "description": "",
    "required": [
        "tree",
        "genomes",
        "outbase"
    ],
    "properties": {
        "threads": {
            "type": "integer",
            "default": 16,
            "description": "how many threads to use"
        },
        "tree": {
            "type": "string",
            "description": "tree used to guide cactus construction"
        },
        "genomes": {
            "type": "object",
            "minProperties": 2,
            "patternProperties": {
                ".*": {"type": "string"}
            },
            "description": "dictionary/object mapping sample_names to assembly paths"
        },
        "outbase": {
            "type": "string",
            "description": "prefix for output files"
        }
    }
}